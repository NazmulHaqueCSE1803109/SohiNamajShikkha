<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="#bccbde"
    tools:context=".JakaterBiboron">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <Button
                android:layout_marginTop="10dp"
                android:id="@+id/jakatoshortoid"
                android:layout_width="match_parent"
                android:layout_height="100dp"
                android:text="যাকাত ও যাকাতের শর্তসমূহ"
                android:textSize="20sp"
                android:textStyle="bold"
                style="@style/Widget.AppCompat.Button.Colored"
                android:textColor="#061F81"
                />
            <Button
                android:layout_marginTop="3dp"
                android:id="@+id/jakatbontonerkhatid"
                android:layout_width="match_parent"
                android:layout_height="100dp"
                android:text="বিশেষ ক্ষেত্রে যাকাত ও যাকাত বণ্টনের খাতসমূহ"
                android:textSize="20sp"
                android:textStyle="bold"
                style="@style/Widget.AppCompat.Button.Colored"
                android:textColor="#061F81"
                />
            <Button
                android:layout_marginTop="3dp"
                android:id="@+id/jakatgononarniomid"
                android:layout_width="match_parent"
                android:layout_height="100dp"
                android:text="যাকাত গণনার ও প্রদানের নিয়ম"
                android:textSize="20sp"
                android:textStyle="bold"
                style="@style/Widget.AppCompat.Button.Colored"
                android:textColor="#061F81"
                />
            <Button
                android:layout_marginTop="3dp"
                android:id="@+id/jakatmuktosompodid"
                android:layout_width="match_parent"
                android:layout_height="100dp"
                android:text="যাকাতমুক্ত সম্পদ"
                android:textSize="20sp"
                android:textStyle="bold"
                style="@style/Widget.AppCompat.Button.Colored"
                android:textColor="#061F81"
                />
            <Button
                android:layout_marginTop="3dp"
                android:id="@+id/jakaterfojilotid"
                android:layout_width="match_parent"
                android:layout_height="100dp"
                android:text="যাকাতের গুরুত্ব ও ফযিলত"
                android:textSize="20sp"
                android:textStyle="bold"
                style="@style/Widget.AppCompat.Button.Colored"
                android:textColor="#061F81"
                />
            <Button
                android:layout_marginTop="3dp"
                android:id="@+id/jakatadainakorarporinamid"
                android:layout_width="match_parent"
                android:layout_height="100dp"
                android:text="জাকাত আদায় না করার পরিণাম"
                android:textSize="20sp"
                android:textStyle="bold"
                style="@style/Widget.AppCompat.Button.Colored"
                android:textColor="#061F81"
                />

        </LinearLayout>
    </ScrollView>
</LinearLayout>