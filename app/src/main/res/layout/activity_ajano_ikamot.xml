<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="#bccbde"
    tools:context=".AjanoIkamot">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <Button
                android:id="@+id/ajanerhukumid"
                android:layout_width="match_parent"
                android:layout_height="100dp"
                android:text="আযানের হুকুম,ভুমিকা ও নিয়ম"
                android:textSize="20sp"
                android:textStyle="bold"
                android:layout_marginTop="10dp"
                style="@style/Widget.AppCompat.Button.Colored"
                android:textColor="#061F81"/>
            <Button
                android:id="@+id/ajanerfojilotid"
                android:layout_width="match_parent"
                android:layout_height="100dp"
                android:text="আযানের ফযিলত"
                android:textSize="20sp"
                android:textStyle="bold"
                android:layout_marginTop="10dp"
                style="@style/Widget.AppCompat.Button.Colored"
                android:textColor="#061F81"/>
            <Button
                android:id="@+id/ajanerahkamid"
                android:layout_width="match_parent"
                android:layout_height="100dp"
                android:text="আযান ও ইকামতের কিছু আহকাম"
                android:textSize="20sp"
                android:textStyle="bold"
                android:layout_marginTop="10dp"
                style="@style/Widget.AppCompat.Button.Colored"
                android:textColor="#061F81"/>
            <Button
                android:id="@+id/muajjineradobid"
                android:layout_width="match_parent"
                android:layout_height="100dp"
                android:text="মুয়াজ্জিনের আদাব"
                android:textSize="20sp"
                android:textStyle="bold"
                android:layout_marginTop="10dp"
                style="@style/Widget.AppCompat.Button.Colored"
                android:textColor="#061F81"/>
            <Button
                android:id="@+id/ikamotid"
                android:layout_width="match_parent"
                android:layout_height="100dp"
                android:text="ইকামত"
                android:textSize="20sp"
                android:textStyle="bold"
                android:layout_marginTop="10dp"
                style="@style/Widget.AppCompat.Button.Colored"
                android:textColor="#061F81"/>
        </LinearLayout>
    </ScrollView>
</LinearLayout>