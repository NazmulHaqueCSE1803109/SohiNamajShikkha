<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="#bccbde"
    tools:context=".KurbanirBiboron">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <Button
                android:layout_marginTop="10dp"
                android:id="@+id/kurbanirbiboronid"
                android:layout_width="match_parent"
                android:layout_height="100dp"
                android:text="কুরবানীর বিবরণ"
                android:textSize="20sp"
                android:textStyle="bold"
                style="@style/Widget.AppCompat.Button.Colored"
                android:textColor="#061F81"
                />
            <Button
                android:layout_marginTop="10dp"
                android:id="@+id/alquranekurbaniid"
                android:layout_width="match_parent"
                android:layout_height="100dp"
                android:text="কুরবানী সম্পর্কে আল-কুরাআন"
                android:textSize="20sp"
                android:textStyle="bold"
                style="@style/Widget.AppCompat.Button.Colored"
                android:textColor="#061F81"
                />
            <Button
                android:layout_marginTop="10dp"
                android:id="@+id/jaderuporkurbanioajibid"
                android:layout_width="match_parent"
                android:layout_height="100dp"
                android:text="যাদের ওপর কোরবানি ওয়াজিব"
                android:textSize="20sp"
                android:textStyle="bold"
                style="@style/Widget.AppCompat.Button.Colored"
                android:textColor="#061F81"
                />
            <Button
                android:layout_marginTop="10dp"
                android:id="@+id/kurbanirposhuid"
                android:layout_width="match_parent"
                android:layout_height="100dp"
                android:text="কোরবানির পশু"
                android:textSize="20sp"
                android:textStyle="bold"
                style="@style/Widget.AppCompat.Button.Colored"
                android:textColor="#061F81"
                />
            <Button
                android:layout_marginTop="10dp"
                android:id="@+id/akikaid"
                android:layout_width="match_parent"
                android:layout_height="100dp"
                android:text="আকিকা"
                android:textSize="20sp"
                android:textStyle="bold"
                style="@style/Widget.AppCompat.Button.Colored"
                android:textColor="#061F81"
                />


        </LinearLayout>
    </ScrollView>
</LinearLayout>